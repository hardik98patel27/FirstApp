# File Name: firstapp.py
#:kivy 1.11.1
#: import SlideTransition kivy.uix.screenmanager.SlideTransition


WindowManager:
    transition:SlideTransition()
    MainWindow:
    SecondWindow:




<MainWindow>:
    name:"First_Page"

    Image:
        source: 'hpomen.jpg'
        size: self.texture_size
        Label:
            text:"Application"
            font_size:70
            pos:(900,900)
            canvas.after:
                Color:
                    rgba: 1,0,0,.5
        Label:
            text:"Name : "
            font_size: 50
            pos:(50,700)
        TextInput:
            id:my_text
            text:"Enter Name"
            font_size:50
            multiline:False
            pos:(200,700)
            width:600
        Button:
            text:"Click Me"
            font_size: 30
            width:2000
            on_release:
                app.root.transition=SlideTransition(direction="left")
                app.root.current="Second_Page"
                app.root.screens[1].ids.my_label.text= "Hello " + root.ids.my_text.text

<SecondWindow>:
    name:"Second_Page"
    Image:
        source:"hpomen.jpg"
        size:self.texture_size
        Scatter:
            Label:
                id:my_label
                font_size:70
                pos:(900,900)
                canvas.after:
                    Color:
                        rgba: 1,0,0,.5
        Button:
            text:"Go Back"
            font_size: 30
            width:2000
            on_release:
                app.root.transition=SlideTransition(direction="right")
                app.root.current="First_Page"